{
  "name": "HASSIO-WB-MQTT",
  "version": "0.05",
  "slug": "hassio-wb-mqtt",
  "description": "This addon runs wb-mqtt-serial deamon inside your Hass.io that allows you to integrate your Wirenboard devices (https://wirenboard.com).",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "startup": "application",
  "boot": "auto",
  "map": ["config:rw", "share:rw"],
  "devices": ["/dev/ttyUSB0:/dev/ttyUSB0:rwm"],
  "options": {
    "root_path": "/",
    "path_to_config_file": "/config/wb-mqtt-serial.conf",
    "path_to_history_folder": "/share/history",
    "path_to_config_schema": "/config/wb-mqtt/wb-mqtt-serial.schema.json",
    "mqtt_host": "core-mosquitto",
    "mqtt_port": "1883",
    "mqtt_user": "",
    "mqtt_password": ""
  },
  "schema": {
    "root_path": "str",
    "path_to_config_file": "str",
    "path_to_history_folder": "str",
    "path_to_config_schema": "str",
    "mqtt_host": "str",
    "mqtt_port": "port",
    "mqtt_user": "str",
    "mqtt_password": "str"
  },
  "image": "egorromanko/{arch}-hassio-wb-mqtt"
}
